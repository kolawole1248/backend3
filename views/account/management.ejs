<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
    <style>
        .management-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        
        .welcome-message {
            background: #d4edda;
            color: #155724;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1.5rem;
            border-left: 4px solid #28a745;
        }
        
        .management-links {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 2rem;
        }
        
        .management-link {
            display: block;
            padding: 1rem;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            transition: background 0.3s;
        }
        
        .management-link:hover {
            background: #0056b3;
        }
        
        .inventory-section {
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #eee;
        }
        
        .account-info {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <nav>
        <%- include('../partials/navigation') %>
    </nav>
    <main>
        <div class="management-container">
            <h1><%= title %></h1>
            
            <!-- Flash Messages -->
            <%- messages() %>
            
            <!-- Personalized Greeting based on account type -->
            <h2>Welcome <%= accountData.account_firstname %></h2>
            
            <!-- Account Information Display -->
            <div class="account-info">
                <p><strong>Name:</strong> <%= accountData.account_firstname %> <%= accountData.account_lastname %></p>
                <p><strong>Email:</strong> <%= accountData.account_email %></p>
                <p><strong>Account Type:</strong> <%= accountData.account_type %></p>
            </div>
            
            <!-- Update Account Information Link (for all account types) -->
            <div class="management-links">
                <a href="/account/update/<%= accountData.account_id %>" class="management-link">
                    Update Account Information
                </a>
            </div>
            
            <!-- Inventory Management Section (Only for Employees/Admins) -->
            <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
                <div class="inventory-section">
                    <h3>Inventory Management</h3>
                    <p><a href="/inv/">Manage Inventory</a></p>
                </div>
            <% } %>
            
            <!-- Logout Link -->
            <div class="management-links">
                <a href="/account/logout" class="management-link" style="background: #dc3545;">
                    Logout
                </a>
            </div>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>